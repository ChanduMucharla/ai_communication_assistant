# Email settings (IMAP for reading; SMTP for sending). Leave blank to use demo mode.
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your_email@gmail.com
IMAP_PASSWORD=your_app_password

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# OpenAI API Key (optional). If not set, the app will use a smart template fallback.
OPENAI_API_KEY=
